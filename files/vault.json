[
        {
            "name": "vault-${env}",
            "image": "${image}",
            "memoryReservation": 10,
            "privileged": true,
            "portMappings": [
                {
                    "containerPort": 8200
                }
            ],
            "environment": [
                {
                    "name": "VAULT_LOCAL_CONFIG",
                    "value": "{ \"backend\": {\"consul\": {\"address\": \"127.0.0.1:8500\", \"path\": \"vault\"}}, \"default_lease_ttl\": \"168h\", \"max_lease_ttl\": \"720h\", \"listener\": [{ \"tcp\": { \"address\": \"0.0.0.0:8200\", \"tls_disable\": true }}] }"
                }
            ],
            "command": [
              "server"
            ],
            "logConfiguration": {
              "logDriver": "awslogs",
                "options": {
                  "awslogs-group": "${awslogs_group}",
                   "awslogs-region": "${awslogs_region}",
                   "awslogs-stream-prefix": "${awslogs_stream_prefix}"
                }
              }
        },
        {
            "name": "vault-unseal-${env}",
            "image": "${image}",
            "memoryReservation": 10,
            "privileged": true,
            "essential": false,
            "environment": [
                {
                    "name": "VAULT_ADDR",
                    "value": "http://127.0.0.1:8200"
                }
            ],
            "command": [
              "sh", "-c", "sleep 10; vault unseal ${unseal_key} "
            ],
            "logConfiguration": {
              "logDriver": "awslogs",
                "options": {
                  "awslogs-group": "${awslogs_group}",
                   "awslogs-region": "${awslogs_region}",
                   "awslogs-stream-prefix": "${awslogs_stream_prefix}"
                }
              }
        }
]
